<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ムービー詳細
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= attachment_image_tag @movie, :image %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @movie.title %></p>
                <% if current_user.already_favorited?(@movie) %>
                    <%= link_to movie_favorites_path(@movie), method: :delete do %>
                      <i class="fas fa-heart"></i>
                    <% end %>
                  <% else %>
                    <%= link_to movie_favorites_path(@movie), method: :create do %>
                      <i class="far fa-heart"></i>
                    <% end %>
                  <% end %>
                <%= @movie.favorites.count %>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>ムービー</th>
                </tr>
                <tr>
                  <td><%= simple_format @movie.body %></td>
                </tr>
              </table>
              <% if @movie.user.id == current_user.id %>
                <%= link_to "編集画面へ", edit_movie_path(@movie), class: "button is-success" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="column is-4">
        <article class="panel is-link">
          <p class="panel-heading">
            By <%= @movie.user.username %>
          </p>
          <div class="panel-block">
            <p class="control">
              <%= @movie.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@movie.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @movie.user.username %> さんのページへ
          <% end %>
        </article>
      </div>
    </div>
  </div>
</section>

<div class="column">
    <div class="box">
      <p class="title is-5">コメント一覧</p>
        <% @comments.each do |c| %>
<div>
  <% unless c.user.blank? %>
    <a href="<%= user_path(c.user_id) %>">
    <div class="image is-64x64"  style="margin-right: auto;">
      <%= attachment_image_tag c.user, :profile_image, fallback: "no-image.png", class: "profile_image is-rounded mr-3 mb-3" %>
    </div></a>
  <% end %>
  <%= c.user.username unless c.user.blank? %>
  <br />
  <%= c.content %>
</div>
<br />
<% end %>
<% if user_signed_in? %>
  <%= form_with(model: [@movie, @comment], local: true) do |f| %>
    <%= f.text_area :content, class: "textarea", rows: 5 %>
    <%= button_tag type: "submit", class: "button is-success float-right mt-3" do %>
      <i class="far fa-comments"></i> コメントする
    <% end %>
  <% end %>
<% end %>
</div>
